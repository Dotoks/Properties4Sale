<form method="post" enctype="multipart/form-data">
    <section class="intro-single">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="Area"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="Beds"></label>
                <input asp-for="Beds" class="form-control" />
                <span asp-validation-for="Beds" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Baths"></label>
                <input asp-for="Baths" class="form-control" />
                <span asp-validation-for="Baths" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Garages"></label>
                <input asp-for="Garages" class="form-control" />
                <span asp-validation-for="Garages" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TypeOfPropertyId">Type Of Property</label>
            <select asp-for="TypeOfPropertyId" class="form-control" asp-items="TypeOfPropertiesItems"></select>
            <span asp-validation-for="TypeOfPropertyId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Images"></label>
            <input asp-for="Images" class="form-control" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="form-check"></div>
            <label>@Model.Features</label>

        <input type="submit" class="btn-primary" />
    </section>
</form>

